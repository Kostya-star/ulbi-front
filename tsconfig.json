{
  "compilerOptions": {
    // for absolute import
    "strict": true,
    "plugins": [{ "name": "typescript-plugin-css-modules" }],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "es5",
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "*": ["./src/*"]
    }
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  // "include": [
    // "src/**/*",
    //   "./config/jest/setupTests.ts"
    // ]
    "include": [
      "./config/jest/setupTests.ts",
      "src/**/*.ts",
      "src/**/*.tsx",
  ],
}